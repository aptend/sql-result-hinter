{
  "name": "sql-result-hint",
  "displayName": "SQL Result Hint",
  "description": "为 SQL 文件添加 result 提示功能，显示预期结果和错误信息",
  "version": "0.1.0",
  "publisher": "aptend",
  "author": {
    "name": "aptend",
    "email": "aptend@hotmail.com"
  },
  "homepage": "https://github.com/aptend/sql-result-hint",
  "repository": {
    "type": "git",
    "url": "https://github.com/aptend/sql-result-hint.git"
  },
  "bugs": {
    "url": "https://github.com/aptend/sql-result-hint/issues"
  },
  "license": "MIT",
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "icon": "log.png",
  "keywords": [
    "sql",
    "database",
    "hint",
    "hover",
    "intellisense",
    "query",
    "mysql"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:sql",
    "onLanguage:sql-result"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sql",
        "extensions": [
          ".sql"
        ]
      },
      {
        "id": "sql-result",
        "extensions": [
          ".result"
        ]
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "sqlResultHint.goToResult",
          "when": "resourceExtname == .sql",
          "group": "navigation"
        },
        {
          "command": "sqlResultHint.goToSql",
          "when": "resourceExtname == .result",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "SQL Result Hint",
      "properties": {
        "sqlResultHint.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用 SQL 结果提示功能"
        },
        "sqlResultHint.showErrorHints": {
          "type": "boolean",
          "default": true,
          "description": "显示错误行提示"
        },
        "sqlResultHint.goToResultHints": {
          "type": "boolean",
          "default": true,
          "description": "显示结果提示"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && npx mocha out/test/**/*.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.1",
    "typescript": "^4.9.4",
    "mocha": "^10.2.0",
    "@vscode/test-electron": "^2.3.0"
  }
}
